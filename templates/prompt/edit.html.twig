{% extends 'base.html.twig' %}

{% block title %}Modifier {{ prompt.title }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1 class="h2 mb-0">Modifier le prompt</h1>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a href="{{ path('prompt_index') }}" class="btn btn-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}