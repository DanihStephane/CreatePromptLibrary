{% extends 'base.html.twig' %}

{% block title %}Liste des Prompts{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col">
            <h1>Liste des Prompts</h1>
        </div>
        <div class="col text-end">
            <a href="{{ path('prompt_new') }}" class="btn btn-primary">Nouveau Prompt</a>
        </div>
    </div>

    <div class="row">
        {% for prompt in prompts %}
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ prompt.title }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ prompt.category }}</h6>
                        <p class="card-text">{{ prompt.content|slice(0, 200) }}...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="{{ path('prompt_show', {'id': prompt.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                                <a href="{{ path('prompt_edit', {'id': prompt.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                            </div>
                            <small class="text-muted">{{ prompt.createdAt|date('d/m/Y') }}</small>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col">
                <p>Aucun prompt trouv√©.</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}